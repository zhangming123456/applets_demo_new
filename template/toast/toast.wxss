.toast_content_box {
  position: fixed;
  z-index: 999;
  margin: auto;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.toast_content_box .toast_content {
  width: 60%;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 85%;
}
.toast_content_box .toast_content .toast_content_text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
