            <view class="weui-btn-area">
                <button class="weui-btn home_scanCode_btn" type="primary" catchtap="bindScanCode">扫一扫</button>
                <button class="weui-btn" type="default" catchtap="bindGoBack">返回</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__links">
                    <navigator url="" class="weui-footer__link">一号掌柜</navigator>
                </view>
                <view class="weui-footer__text">Copyright © 2016-2020 vip.zhenler.com</view>
            </view>
        </view>
