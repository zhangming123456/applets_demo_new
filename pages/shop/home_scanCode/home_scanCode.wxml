<view class="page">
    <view class="weui-msg">
        <view class="p">
            <text class="iconfont icon-weixinsaoma azm-icon"></text>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">扫码点餐</view>
            <view class="weui-msg__desc">
                <text>该餐厅支持餐后付款，请扫描桌台二维码</text>
                <navigator url="" class="weui-msg__link"></navigator>
            </view>
        </view>
